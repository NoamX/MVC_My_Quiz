{% extends 'base.html.twig' %}
{% block title %}MyQuiz / Reponse{% endblock %}
{% block body %}
<div style="margin: 75px auto; width: 50%;">
    <div class="card">
        <div class="card-header">
            <span class="badge badge-primary">
                <h3>Correction</h3>
            </span>
        </div>
        <div class="card-body">
            <div class="card">
                <div class="card-header">
                    Mauvaise(s) réponse(s) :
                </div>
                <div class="card-body">
                    {% for value in question %}
                    <p>
                        {{ value.question }}
                    </p>
                    {% endfor %}
                    <hr>
                    {% for reponse in bad_reponse %}
                    <p>
                        {{ reponse }}
                    </p>
                    {% endfor %}
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-header">
                    Bonne(s) réponse(s) :
                </div>
                <div class="card-body">
                    {% for reponse in reponse_expected %}
                    <p>
                        {{ reponse }}
                    </p>
                    {% endfor %}
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-header">
                    Total :
                </div>
                <div class="card-body">
                    {{ total }} / {{ nbrQuestion }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}